---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AJL Tech NJ — Trusted Tech Support for Homes and Businesses',
  description: 'On-site and remote support, device repairs, security installs, and custom network solutions built for North Jersey.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Request Service',
        href: '/contact',
        target: '_self',
        icon: 'tabler:message',
      },
      { text: 'Explore Services', href: '#features' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1588508065123-287b28e013da?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2006&q=80', alt: 'AJL Tech NJ Professional Services' }}
  >
    <Fragment slot="title">
      Reliable Tech Solutions in <span class="hidden xl:inline">North Jersey</span>
      <span class="text-accent dark:text-white"> Homes & Businesses</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">AJL Tech NJ</span> offers personalized tech support, device repairs, network setup, and secure camera installs — fast, local, and friendly.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">AJL Tech NJ: Fast. Local. Friendly.</span>
      From emergency computer fixes to complete network overhauls - we keep your technology running smoothly.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Service Area:" description="Proudly serving North Jersey with professional tech support and device repairs" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Our Services"
    title="Professional Tech Solutions You Can Trust"
    subtitle="From mobile device repairs to network optimization, AJL Tech NJ provides comprehensive technology support for North Jersey homes and businesses."
    items={[
      {
        title: 'Mobile Device Repairs',
        description:
          'Expert repair services for iPhone and Android devices. Screen replacements, battery issues, water damage recovery, and more with warranty included.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Computer & Laptop Support',
        description:
          'Comprehensive computer repair, virus removal, data recovery, performance optimization, and hardware troubleshooting services.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Network Setup & Optimization',
        description:
          'Professional network configuration, Wi-Fi optimization, router setup, and custom LAN builds backed by UAL-certified expertise.',
        icon: 'tabler:network',
      },
      {
        title: 'Security System Installation',
        description:
          'Basic security camera setup and configuration for home and office protection. Advanced installations through certified partners.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Tech Support & Troubleshooting',
        description:
          'Remote and on-site technical support for all your technology needs. Software installation, printer setup, and smart device configuration.',
        icon: 'tabler:headset',
      },
      {
        title: 'Custom Tech Solutions',
        description:
          'Tailored technology solutions for unique business needs. PC imaging, multi-system setup, and productivity enhancement systems.',
        icon: 'tabler:settings',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Choose AJL Tech NJ"
    title="Local Expertise You Can Count On"
    items={[
      {
        title: 'North Jersey Based',
        description:
          'Local service means faster response times, personalized support, and a tech expert who understands your community.',
      },
      {
        title: 'Certified & Experienced',
        description:
          'UAL-certified network expertise combined with years of hands-on experience in device repairs and tech support.',
      },
      {
        title: 'Transparent Pricing',
        description:
          'Clear, upfront pricing with no hidden fees. Free estimates and warranty included on all repair services.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Professional Tech Support',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Professional Service, Local Trust</h3>
      Experience the difference of working with a local tech expert who puts your needs first
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Quick Response Times',
        description: 'Same-day or next-day service for most issues. Emergency support available for critical business needs.',
      },
      {
        title: 'Warranty on All Repairs',
        description:
          'All device repairs come with a 30-day warranty on parts and labor. We stand behind our work.',
      },
      {
        title: 'No Hidden Fees',
        description:
          'Transparent pricing with free estimates. You know exactly what you\'ll pay before any work begins.',
      },
      {
        title: 'Follow-up Support',
        description:
          'We don\'t disappear after the job is done. Ongoing support ensures your technology keeps working perfectly.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1573164713714-d95e436ab8d6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Professional Tech Service',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Service You Can Count On</h3>
      Experience reliable tech support that puts your needs first
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Local North Jersey Expertise',
        description:
          'We understand the unique tech challenges of North Jersey homes and businesses. Local service means faster response and personalized solutions.',
      },
      {
        title: 'UAL-Certified Network Support',
        description:
          'Professional network engineering backed by UAL certification. Trust your connectivity to experienced hands.',
      },
      {
        title: 'Complete Device Repair Services',
        description:
          'From cracked iPhone screens to laptop boot issues, we handle repairs for all major brands with genuine parts and warranties.',
      },
      {
        title: 'Security & Privacy Focused',
        description: 'Camera installations and network setups designed with your privacy and security as top priorities.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556075798-4825dfaaf498?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Technology Solutions',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Built for Success</h3>
      Technology solutions designed to enhance your productivity and peace of mind
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How We Support Your Technology Needs"
    tagline="Simple Process"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Contact Us</span>',
        description:
          'Reach out via phone, email, or our contact form. Describe your tech issue or service needs and we\'ll provide a free initial consultation.',
        icon: 'tabler:phone',
      },
      {
        title: 'Step 2: <span class="font-medium">Get Free Estimate</span>',
        description:
          'We\'ll assess your needs and provide a clear, upfront estimate with no hidden fees. You\'ll know exactly what to expect before any work begins.',
        icon: 'tabler:file-dollar',
      },
      {
        title: 'Step 3: <span class="font-medium">Professional Service</span>',
        description:
          'Our certified technicians provide expert service at your location or remotely. We work efficiently while keeping you informed throughout the process.',
        icon: 'tabler:tools',
      },
      {
        title: 'Ongoing Support',
        description:
          'Enjoy continued support with warranty coverage and follow-up assistance to ensure your technology keeps working perfectly.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Tech Support Process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Core Service Areas"
    subtitle="Comprehensive tech support solutions for North Jersey"
    tagline="What We Do"
    items={[
      {
        title: 'Tech Support',
        description: 'Remote and on-site troubleshooting for all your technology needs.',
        icon: 'tabler:headset',
      },
      {
        title: 'Security Systems',
        description:
          'Privacy-conscious camera setups and basic security installations for home and office.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Network Solutions',
        description:
          'Router setup, Wi-Fi optimization, and custom LAN configurations for better connectivity.',
        icon: 'tabler:network',
      },
      {
        title: 'Device Repairs',
        description:
          'Professional repair services for phones, tablets, and computers with warranty coverage.',
        icon: 'tabler:tool',
      },
      {
        title: 'PC Imaging',
        description: 'Cloned profiles, clean OS setups, and multi-system deployment for businesses.',
        icon: 'tabler:copy',
      },
      {
        title: 'Smart Home Setup',
        description:
          'Configuration and integration of smart devices for modern, connected living.',
        icon: 'tabler:smart-home',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Tech Tips & Service Updates"
    information="Stay informed with helpful tech tips, service updates, and insights from our team. Learn how to keep your technology running smoothly and discover new ways to enhance your digital experience."
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about our tech support services and policies"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Do I need to buy equipment before contacting you?',
        description:
          'No! We can assess your needs first and recommend the right equipment. We often have preferred suppliers and can help you get better deals on hardware.',
      },
      {
        title: 'What do I need to start?',
        description:
          'Just contact us! We\'ll assess your technology needs, provide a free consultation, and recommend the best solutions for your situation. Whether it\'s device repair, network setup, or ongoing support, we\'ll guide you through every step.',
      },
      {
        title: 'Do you offer warranty or follow-up visits?',
        description:
          'Absolutely! All repairs come with a 30-day warranty, and we provide follow-up support to ensure everything continues working properly. We\'re here for ongoing assistance.',
      },
      {
        title: 'Can you help with both Windows and Mac computers?',
        description:
          'Yes, we support both Windows and Mac systems, as well as various Linux distributions. Our technicians are cross-platform certified.',
      },
      {
        title: 'What\'s your typical response time for service calls?',
        description:
          'Most non-emergency calls are scheduled within 24-48 hours. For urgent business issues, we offer same-day emergency service at standard rates.',
      },
      {
        title: 'Do you provide remote support?',
        description:
          'Yes! Many issues can be resolved remotely, which saves you time and money. We use secure remote access tools and always ask permission before connecting.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Years Combined Experience', amount: '15+' },
      { title: 'Service Areas Covered', amount: '20+' },
      { title: 'Days Per Week Available', amount: '7' },
      { title: 'Response Time (Hours)', amount: '<24' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Help Now',
        href: '/contact',
        target: '_self',
        icon: 'tabler:message',
      },
    ]}
  >
    <Fragment slot="title">
      Need Tech Support?
    </Fragment>

    <Fragment slot="subtitle">
      Reach out to AJL Tech NJ for reliable service and clear answers.
    </Fragment>
  </CallToAction>
</Layout>
