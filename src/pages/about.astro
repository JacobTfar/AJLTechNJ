---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Jorge Lamas â€” AJL Tech NJ',
  description: 'Meet Jorge Lamas, founder of AJL Tech NJ. From humble beginnings in Peru to expert technician at Newark Airport, discover the passion and experience behind our trusted tech support services.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Jorge Lamas"
    image={{
      src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Jorge Lamas - AJL Tech NJ Founder',
    }}
  >
    <Fragment slot="title">
      From Humble Beginnings to <br />
      <span class="text-accent dark:text-white"> Trusted Tech Expert</span>
    </Fragment>

    <Fragment slot="subtitle">
      Meet Jorge Lamas, the passionate technician behind AJL Tech NJ. Born in Peru with a natural gift for fixing things, Jorge has spent years perfecting his craft working with enterprise-level technology systems at Newark Airport. Now he's building lasting relationships with North Jersey families and businesses who trust him with their most important tech needs.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Jorge's Professional Journey"
    stats={[
      { title: 'Years Experience', amount: '10+' },
      { title: 'Devices Repaired', amount: '1000+' },
      { title: 'Happy Clients', amount: '300+' },
      { title: 'Newark Airport Years', amount: '5+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Experience That Matters"
    subtitle="Jorge's hands-on experience spans from major airline operations to personal device repairs, giving him unique insights into what technology really needs to work reliably."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Airport Operations',
        description:
          'Years of experience maintaining United Airlines kiosks, workstations, and critical systems at Newark Airport through DecisionOne partnership.',
        icon: 'tabler:plane',
      },
      {
        title: 'Multi-Platform Expert',
        description:
          'Deep expertise across Apple, Android, Microsoft, and enterprise systems gained from real-world, high-pressure environments.',
        icon: 'tabler:devices',
      },
      {
        title: 'Problem Solver',
        description:
          'Natural troubleshooting ability honed through thousands of repairs and system fixes in mission-critical airline operations.',
        icon: 'tabler:tools',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Mobile Device Mastery',
        description:
          'Extensive experience repairing and configuring smartphones and tablets for airline staff and passengers in high-volume environments.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Network Engineering',
        description:
          'UAL-certified network expertise gained from managing complex airport infrastructure and connectivity systems.',
        icon: 'tabler:network',
      },
      {
        title: 'Customer Service Excellence',
        description:
          'Proven ability to work under pressure while maintaining friendly, professional service - essential skills learned in airport operations.',
        icon: 'tabler:heart',
      },
      {
        title: 'Security & Compliance',
        description:
          'Deep understanding of security protocols and compliance requirements from working in sensitive airport environments.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Rapid Diagnostics',
        description:
          'Lightning-fast troubleshooting abilities developed through years of fixing critical systems that couldn\'t afford downtime.',
        icon: 'tabler:search',
      },
      {
        title: 'Family Values',
        description:
          'As a married man from Peru, Jorge brings dedication, reliability, and personal care to every client relationship.',
        icon: 'tabler:home-heart',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Professional Tech Expertise',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Jorge's Core Values"
    subtitle="Born in Peru and shaped by years of hands-on technical work, Jorge's approach to technology repair and support is guided by timeless values that put people first."
    items={[
      {
        title: 'Honest Communication',
        description:
          'Jorge believes in explaining technical issues in plain language and providing transparent pricing. No technical jargon, no hidden fees - just clear, honest service.',
      },
      {
        title: 'Continuous Learning',
        description:
          'Technology constantly evolves, and Jorge stays current through ongoing education and hands-on experience. From Newark Airport systems to the latest smartphones, he adapts and grows.',
      },
      {
        title: 'Personal Relationships',
        description:
          'Every client is treated like family. Jorge takes the time to understand your specific needs and builds lasting relationships based on trust and reliable service.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Professional Journey"
    subtitle="From the fast-paced environment of Newark Airport to serving North Jersey communities, Jorge's career has been built on solving problems and delivering results when it matters most."
    isReversed={true}
    callToAction={{
      text: 'Contact Jorge',
      href: '/contact',
    }}
    items={[
      {
        title: 'DecisionOne Airport Operations',
        description: 'Years of maintaining critical United Airlines systems - from check-in kiosks to scanners and workstations. Jorge mastered working under pressure with zero tolerance for downtime.',
        icon: 'tabler:plane',
      },
      {
        title: 'Multi-Platform Expertise',
        description:
          'Daily hands-on experience with Apple, Android, Microsoft, and proprietary airline systems. Jorge developed the versatility to tackle any technology challenge.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'North Jersey Business Owner',
        description:
          'Building on his airport expertise, Jorge founded AJL Tech NJ to bring enterprise-level technical support to homes and small businesses throughout North Jersey.',
        icon: 'tabler:building-store',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Service Area"
    tagline="Where we serve"
    columns={2}
    items={[
      {
        title: 'North Jersey',
        description: 'Serving North Arlington and surrounding North Jersey communities with on-site and remote support.',
      },
      {
        title: 'Remote Support',
        description: 'Secure remote assistance available nationwide for software issues, troubleshooting, and system optimization.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="Contact Jorge"
    columns={2}
    items={[
      {
        title: 'Schedule Service',
        description:
          'Ready to fix your tech problems? Contact Jorge directly to schedule on-site service or remote support sessions.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Quick Questions',
        description:
          'Have a quick tech question? Jorge is always happy to provide brief consultations and honest advice about your technology needs.',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
