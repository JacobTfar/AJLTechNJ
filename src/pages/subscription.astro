---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import Features2 from '~/components/widgets/Features2.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Tech Support Subscriptions â€” AJL Tech NJ',
  description: 'Ongoing tech support plans for North Jersey homes and businesses. Get priority support, regular maintenance, and peace of mind.',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Subscription Tech Support"
    title="Never Worry About Tech Issues Again"
    subtitle="Get ongoing tech support with our subscription plans. Priority service, regular maintenance, and unlimited remote support for your home or business."
    actions={[
      { variant: 'primary', text: 'View Plans', href: '#pricing', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1573164713714-d95e436ab8d6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80',
      alt: 'Professional tech support for North Jersey homes and businesses',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    id="features"
    title="Why Choose Subscription Tech Support?"
    subtitle="Get consistent, reliable tech support that keeps your systems running smoothly"
    tagline="Benefits"
    items={[
      {
        title: 'Priority Support',
        description: "Jump to the front of the line with priority scheduling and faster response times for all your tech issues.",
        icon: 'tabler:urgent',
      },
      {
        title: 'Unlimited Remote Support',
        description: "Get help whenever you need it with unlimited remote support sessions included in all plans.",
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Regular Maintenance',
        description: "Proactive system maintenance to prevent issues before they happen, keeping your tech running smoothly.",
        icon: 'tabler:settings',
      },
      {
        title: 'Cost Savings',
        description: "Save money compared to one-off service calls with predictable monthly pricing and included services.",
        icon: 'tabler:coins',
      },
      {
        title: 'Business Continuity',
        description: "Minimize downtime with quick response times and proactive monitoring of your critical systems.",
        icon: 'tabler:building',
      },
      {
        title: 'Local Expertise',
        description: "Jorge's decade of experience serving North Jersey businesses and residents, with personalized service.",
        icon: 'tabler:user-check',
      },
    ]}
  />

  <!-- Pricing Widget ******************* -->

  <Pricing
    id="pricing"
    title="Tech Support Subscription Plans"
    subtitle="Choose the plan that fits your needs and budget"
    prices={[
      {
        title: 'Home Support',
        subtitle: 'Perfect for families and home offices',
        price: 49,
        period: 'per month',
        items: [
          {
            description: 'Unlimited remote support',
          },
          {
            description: '1 on-site visit per quarter',
          },
          {
            description: 'Priority phone and email support',
          },
          {
            description: 'Software updates and maintenance',
          },
          {
            description: 'Network optimization',
          },
          {
            description: '20% off additional services',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Start Home Plan',
          href: '/contact?plan=home',
        },
      },
      {
        title: 'Small Business',
        subtitle: 'Ideal for small businesses (1-10 employees)',
        price: 149,
        period: 'per month',
        items: [
          {
            description: 'Unlimited remote support',
          },
          {
            description: '2 on-site visits per month',
          },
          {
            description: 'Next business day response guarantee',
          },
          {
            description: 'Network monitoring and maintenance',
          },
          {
            description: 'Security system support',
          },
          {
            description: 'Monthly system health reports',
          },
          {
            description: '30% off additional services',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Start Business Plan',
          href: '/contact?plan=business',
        },
        hasRibbon: true,
        ribbonTitle: 'Most Popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'Comprehensive support for larger businesses',
        price: 299,
        period: 'per month',
        items: [
          {
            description: 'Unlimited remote and on-site support',
          },
          {
            description: 'Same business day response guarantee',
          },
          {
            description: 'Dedicated support contact',
          },
          {
            description: '24/7 emergency support available',
          },
          {
            description: 'Complete network management',
          },
          {
            description: 'Security monitoring and updates',
          },
          {
            description: 'Custom service agreements',
          },
          {
            description: '50% off additional services',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Contact for Enterprise',
          href: '/contact?plan=enterprise',
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Subscription Support FAQs"
    subtitle="Common questions about our ongoing tech support plans"
    columns={1}
    items={[
      {
        title: 'Can I cancel my subscription anytime?',
        description: 'Yes, you can cancel your subscription at any time with 30 days notice. No long-term contracts or cancellation fees.',
      },
      {
        title: 'What counts as remote vs on-site support?',
        description: 'Remote support includes software troubleshooting, configuration help, and guidance over phone/screen sharing. On-site visits are for hardware installation, network setup, and hands-on repairs.',
      },
      {
        title: 'What are your support hours?',
        description: 'Jorge provides support evenings and weekends while working his full-time position at EWR. Response times are guaranteed within the next business day, with most issues resolved evenings or weekends when convenient for you.',
      },
      {
        title: 'What if I need more visits than my plan includes?',
        description: 'Additional visits are available at discounted rates (20-50% off depending on your plan). We\'ll always discuss any extra costs before proceeding.',
      },
      {
        title: 'Is there a setup fee?',
        description: 'No setup fees! Your first month includes an initial assessment and optimization of your current systems at no extra charge.',
      },
      {
        title: 'What areas do you serve?',
        description: 'We serve all of North Jersey including Essex, Hudson, Bergen, Passaic, Union, and Morris counties. Travel fees may apply for areas outside our primary service zone.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready for Peace of Mind Tech Support?"
    subtitle="Join dozens of North Jersey families and businesses who trust AJL Tech NJ for reliable, ongoing tech support."
    actions={[
      {
        variant: 'primary',
        text: 'Choose Your Plan',
        href: '#pricing',
      },
      {
        text: 'Call (201) 397-5495',
        href: 'tel:+12013975495',
      },
    ]}
  />
</Layout>
