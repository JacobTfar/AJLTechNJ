---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Our Services â€” AJL Tech NJ',
  description: 'Explore AJL Tech NJ\'s trusted offerings: tech support, device repairs, security installs, and custom network setups tailored for homes and small businesses in North Jersey.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our Services"
    title="Professional Tech Solutions for North Jersey"
    subtitle="From troubleshooting tech issues to setting up security systems and optimizing networks, AJL Tech NJ provides reliable, local support for homes and small businesses."
    actions={[{ variant: 'primary', target: '_self', text: 'Get Support Today', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AJL Tech NJ Services',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Core Services"
    subtitle="Professional tech support and solutions tailored for North Jersey homes and businesses."
    columns={3}
    items={[
      {
        title: 'Tech Support',
        description:
          'Remote and on-site troubleshooting for all your technology needs. From printer setups and software installations to smart device configuration and performance optimization.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Security System Installation',
        description:
          'Basic camera setup and configuration for home and office security. For advanced installations requiring NJ licensure, we partner with certified specialists to ensure compliance.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Network Engineering',
        description: 'Wi-Fi optimization, router setup, and custom LAN builds. Our team brings enterprise-level experience from working with mission-critical airport systems to enhance your connectivity.',
        icon: 'tabler:network',
      },
      {
        title: 'Device Repairs',
        description:
          'Professional repair services for mobile phones (iPhone & Android), tablets, and laptops. Screen replacements, battery issues, boot fixes, water damage recovery, and comprehensive diagnostics with quick turnaround times.',
        icon: 'tabler:tool',
      },
      {
        title: 'PC Imaging & Setup',
        description:
          'Profile cloning, multi-system setup, and clean OS deployment. Perfect for small offices needing identical configurations or high-performance personal builds.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Custom Solutions',
        description:
          'Tailored technology solutions for unique business needs. We assess your requirements and design systems that enhance productivity and streamline operations.',
        icon: 'tabler:settings',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Local Expertise',
        description:
          'Based in North Jersey, we understand the unique tech challenges of local homes and businesses, providing personalized solutions that work.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Enterprise Experience',
        description:
          'Our team brings years of enterprise-level experience from working with mission-critical systems, applying that expertise to your home and business tech needs.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Flexible Service',
        description:
          'Choose from remote support, on-site visits, or drop-off services. We adapt to your schedule and preferences for maximum convenience.',
        icon: 'tabler:clock',
      },
      {
        title: 'Transparent Pricing',
        description:
          'No hidden fees or surprise charges. We provide clear estimates upfront and explain exactly what work needs to be done.',
        icon: 'tabler:currency-dollar',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'AJL Tech NJ Professional Services',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose AJL Tech NJ</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Quick Response',
        description:
          'Fast turnaround times for repairs and support requests. Most issues resolved within 24-48 hours, with emergency support available.',
        icon: 'tabler:clock',
      },
      {
        title: 'Reliable Solutions',
        description:
          'We focus on long-term fixes, not temporary patches. Our solutions are designed to prevent recurring issues and improve overall performance.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Ongoing Support',
        description:
          'Follow-up support included with all services. We ensure your systems continue to work smoothly after our initial service.',
        icon: 'tabler:headset',
      },
      {
        title: 'Local Partnership',
        description:
          'Build a lasting relationship with a local tech expert who understands your specific needs and can provide ongoing assistance.',
        icon: 'tabler:users',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Professional Tech Support Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Service Benefits</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What our clients say"
    testimonials={[
      {
        testimonial: `Jorge helped us set up our entire office network and security system. His expertise and attention to detail made the whole process smooth and professional. Our internet is faster than ever!`,
        name: 'Maria Rodriguez',
        job: 'Small Business Owner',
        image: {
          src: 'https://images.unsplash.com/photo-1494790108755-2616b612b786?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Maria Rodriguez',
        },
      },
      {
        testimonial: `My laptop was completely dead and I thought I'd lost everything. AJL Tech NJ not only fixed it but recovered all my files. Professional, reliable, and reasonably priced. Highly recommend!`,
        name: 'David Chen',
        job: 'Freelancer',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'David Chen',
        },
      },
      {
        testimonial: `Great local tech support! Jorge came to our home, set up all our smart devices, and made sure our Wi-Fi was working perfectly in every room. He's now our go-to tech guy.`,
        name: 'Jennifer Thompson',
        job: 'Homeowner',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Jennifer Thompson',
        },
      },
    ]}
    callToAction={{
      target: '_self',
      text: 'Read more reviews...',
      href: '/contact',
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Tech Support',
        href: '/contact',
      },
    ]}
    title="Ready to solve your tech challenges?"
    subtitle="Contact AJL Tech NJ today for reliable, professional tech support and solutions tailored to your needs."
  />
</Layout>
