---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing â€” AJL Tech NJ',
  description:
    'Transparent pricing for professional tech support services in North Jersey. From device repairs to network setup, get clear estimates with no hidden fees.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Transparent Tech Support Pricing"
    subtitle="Clear, upfront pricing for all our professional tech services. No hidden fees, no surprises."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="One-Time Service Pricing"
    subtitle="Pay as you go for individual tech support services"
    prices={[
      {
        title: 'Remote Support',
        subtitle: 'Perfect for software issues and troubleshooting',
        price: 75,
        period: 'per session',
        items: [
          {
            description: 'Software troubleshooting and fixes',
          },
          {
            description: 'Printer and device setup assistance',
          },
          {
            description: 'Performance optimization',
          },
          {
            description: 'Email and app configuration',
          },
          {
            description: 'Follow-up support included',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Get Remote Support',
          href: '/contact',
        },
      },
      {
        title: 'On-Site Service',
        subtitle: 'Complete tech support at your location',
        price: 125,
        period: 'per visit',
        items: [
          {
            description: 'Network setup and optimization',
          },
          {
            description: 'Hardware installation and repair',
          },
          {
            description: 'Security system basic setup',
          },
          {
            description: 'PC imaging and multi-system setup',
          },
          {
            description: 'Smart device configuration',
          },
          {
            description: 'Ongoing support and consultation',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Schedule Visit',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Device Repairs',
        subtitle: 'Professional repair services',
        price: 'Varies',
        period: 'by device & issue',
        items: [
          {
            description: 'iPhone screen replacement: $80-150',
          },
          {
            description: 'Android screen replacement: $60-120',
          },
          {
            description: 'Laptop repair: $100-250',
          },
          {
            description: 'Data recovery: $150-300',
          },
          {
            description: 'Diagnostic fee: $50 (waived if repaired)',
          },
          {
            description: 'Free estimate provided',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Get Repair Quote',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Subscription Pricing Widget ******************* -->

  <Prices
    title="Subscription Support Plans"
    subtitle="Save money with ongoing tech support subscriptions"
    prices={[
      {
        title: 'Home Support',
        subtitle: 'Perfect for families and home offices',
        price: 49,
        period: 'per month',
        items: [
          {
            description: 'Unlimited remote support',
          },
          {
            description: '1 on-site visit per quarter',
          },
          {
            description: 'Priority phone and email support',
          },
          {
            description: 'Software updates and maintenance',
          },
          {
            description: '20% off additional services',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Start Home Plan',
          href: '/subscription',
        },
      },
      {
        title: 'Small Business',
        subtitle: 'Ideal for small businesses (1-10 employees)',
        price: 149,
        period: 'per month',
        items: [
          {
            description: 'Unlimited remote support',
          },
          {
            description: '2 on-site visits per month',
          },
          {
            description: '4-hour response time guarantee',
          },
          {
            description: 'Network monitoring and maintenance',
          },
          {
            description: '30% off additional services',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Start Business Plan',
          href: '/subscription',
        },
        hasRibbon: true,
        ribbonTitle: 'Best Value',
      },
      {
        title: 'Enterprise',
        subtitle: 'Comprehensive support for larger businesses',
        price: 299,
        period: 'per month',
        items: [
          {
            description: 'Unlimited remote and on-site support',
          },
          {
            description: '2-hour response time guarantee',
          },
          {
            description: '24/7 emergency support available',
          },
          {
            description: 'Complete network management',
          },
          {
            description: '50% off additional services',
          },
        ],
        callToAction: {
          target: '_self',
          text: 'Learn More',
          href: '/subscription',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="What's included in our pricing"
    subtitle="Transparent pricing with no hidden costs"
    columns={2}
    items={[
      {
        title: 'Free Estimates',
        description: 'Get a clear quote before any work begins. No surprises, no hidden fees.',
        icon: 'tabler:file-dollar',
      },
      {
        title: 'Warranty Included',
        description: 'All repairs come with a 30-day warranty on parts and labor for peace of mind.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Local Service',
        description: 'North Jersey based service with quick response times and personalized support.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Multiple Payment Options',
        description: 'Accept cash, check, and major credit cards for your convenience.',
        icon: 'tabler:credit-card',
      },
      {
        title: 'Follow-up Support',
        description: 'Continued support after service completion to ensure everything works perfectly.',
        icon: 'tabler:phone',
      },
      {
        title: 'Emergency Service',
        description: 'Urgent tech issues? We offer emergency support for critical business needs.',
        icon: 'tabler:urgent',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="How our service process works"
    tagline="simple and transparent"
    isReversed={true}
    items={[
      {
        title: 'Contact us',
        icon: 'tabler:number-1',
      },
      {
        title: 'Describe your tech issue',
        icon: 'tabler:number-2',
      },
      {
        title: 'Get free estimate',
        icon: 'tabler:number-3',
      },
      {
        title: 'Schedule service',
        icon: 'tabler:number-4',
      },
      {
        title: 'Receive professional support',
        icon: 'tabler:number-5',
      },
      {
        title: 'Pay for completed work',
        icon: 'tabler:number-6',
      },
      {
        title: 'Enjoy ongoing support',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556075798-4825dfaaf498?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Tech support process',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Common questions about our service pricing and policies."
    columns={1}
    items={[
      {
        title: 'Do you charge for estimates?',
        description:
          'No, we provide free estimates for all services. For device repairs, our diagnostic fee is waived if you proceed with the repair.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept cash, checks, and all major credit cards (Visa, MasterCard, American Express) for your convenience.',
      },
      {
        title: 'Is there a warranty on repairs?',
        description:
          "Yes, all repairs come with a 30-day warranty on parts and labor. If the same issue occurs within 30 days, we'll fix it at no charge.",
      },
      {
        title: 'Do you offer emergency or after-hours service?',
        description:
          'Yes, we offer emergency support for critical business needs. Emergency service rates may apply for urgent after-hours calls.',
      },
      {
        title: 'Can you provide service contracts for businesses?',
        description:
          'Absolutely! We offer custom service contracts for small businesses that need regular IT support. Contact us to discuss your specific needs.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to get tech support?"
    subtitle="Contact AJL Tech NJ today for professional, reliable tech services at transparent prices."
    actions={[
      {
        variant: 'primary',
        text: 'Get your free estimate',
        href: '/contact',
      },
    ]}
  />
</Layout>
